<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.example.raffy.myair.locations.LocationsViewModel" />
    </data>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/location_list"
        android:name="com.example.raffy.myair.locations.LocationsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        app:locations="@{viewmodel.locationList}"
        tools:context="com.example.raffy.myair.locations.LocationsFragment"
        tools:listitem="@layout/fragment_locations" />
</layout>

